<application>
  <component name="MessDetector">
    <phpmd_settings>
      <MessDetectorConfiguration tool_path="phpmd" />
    </phpmd_settings>
  </component>
  <component name="PhpCodeSniffer">
    <phpcs_settings>
      <PhpCSConfiguration standards="MySource;PEAR;PSR1;PSR2;Squiz;Zend" timeout="30000" tool_path="phpcs" />
    </phpcs_settings>
  </component>
</application>